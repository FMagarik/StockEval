@model DDS.Models.Metodología

@{
    ViewBag.Title = "Modificar metodología";
}

<form method="POST" action="Modificar">
    <table style="margin: 0 auto">
        <tr>
            <td style="text-align:right">Metodología</td>
            <td style="padding-left:10px">
                <select name="nombreMetodología" style="min-width:200px">
                    @foreach (string n in ViewBag.NombresMetodologías) {
                        if (@n == ViewBag.NombreMetodología) {
                            <option selected>@n</option>
                        } else {
                            <option>@n</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td style="text-align:right">Fórmula</td>
            <td style="padding-left:10px">
                @if (ViewBag.Fórmula != "") {
                    <input style="margin: 5px auto; min-width:200px" type="text" name="fórmula" value="@ViewBag.Fórmula" />
                } else {
                    <input style="margin: 5px auto; min-width:200px" type="text" name="fórmula" disabled />
                }
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @if (ViewBag.Fórmula != "") {
                    <input type="submit" value="Modificar" />
                } else {
                    <input type="submit" value="Cargar" />
                }
            </td>
        </tr>
    </table>
</form>

<div style="margin: 20px auto; display:table">
    <table style="display:table-cell; padding: 0 50px">
        <tr>
            <th>Indicadores</th>
        </tr>
        @foreach (string n in ViewBag.NombresIndicadores) {
            <tr>
                <td>@n</td>
            </tr>
        }
    </table>

    <table style="display:table-cell; padding: 0 50px">
        <tr>
            <th style="text-align:center" colspan="2">Sintaxis</th>
        </tr>
        <tr>
            <td style="text-align:right">Operadores aritméticos</td>
            <td style="min-width:100px">+, -, *, /</td>
        </tr>
        <tr>
            <td style="text-align:right">Delimitadores de expresiones</td>
            <td>(, )</td>
        </tr>
        <tr>
            <td style="text-align:right">Comparadores</td>
            <td>&lt;, &gt;, =</td>
        </tr>
        <tr>
            <td style="text-align:right">Crecimiento</td>
            <td>$</td>
        </tr>
        <tr>
            <td style="text-align:right">Consistencia</td>
            <td>#</td>
        </tr>
    </table>

    <table style="display:table-cell; padding: 0 50px">
        <tr>
            <th>Metodologías</th>
        </tr>
        @foreach (string n in ViewBag.NombresMetodologías) {
            <tr>
                <td>@n</td>
            </tr>
        }
    </table>

</div>